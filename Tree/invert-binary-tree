https://leetcode.com/problems/invert-binary-tree/
class Solution {
   
    public TreeNode invertTree(TreeNode root) {
        invert(root);
        return root;
    }
    public void invert(TreeNode root)
    {
        if(root==null)
        return;

        TreeNode leftPtr = root.left;
        TreeNode rightPtr = root.right;
        root.left = rightPtr;
        root.right = leftPtr;

        invert(root.left);
        invert(root.right);
    }
}
